{
  "name": "bam_index",
  "title": "bam_index",
  "summary": "indexes the bam.",
  "dxapi": "1.0.0",
  "folder": "/CH_Exome/Workflow/BAMS/",
  "version": "0.0.1",
  "inputSpec": [
    {
      "name": "bam_in",
      "label": "Input_BAM",
      "class": "file",
      "optional": false,
      "patterns": [
        "*.bam"
      ],
      "help": ""
    }
  ],
  "outputSpec": [
    {
      "name": "bai_out",
      "label": "Output_BAM_Index",
      "class": "file",
      "patterns": [
        "*.bam.bai"
      ],
      "help": ""
    }
  ],
  "runSpec": {
    "timeoutPolicy": {
      "*": {
        "hours": 1
      }
    },
    "interpreter": "bash",
    "file": "src/bam_index.sh",
    "execDepends":[
      {"name": "samtools"}
    ],
    "distribution": "Ubuntu",
    "release": "20.04",
    "version": "0"
  },
  "regionalOptions": {
    "aws:eu-west-2": {
      "systemRequirements": {
        "*": {
          "instanceType": "mem3_ssd1_v2_x2"
        }
      }
    }
  },
  "access": {
    "network": [
      "*"
    ]
  }
}
