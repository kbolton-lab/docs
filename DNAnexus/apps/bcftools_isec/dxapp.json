{
  "name": "bcftools_isec",
  "title": "intersect vcfs",
  "summary": "Get intersect of first file persepective from second file",
  "dxapi": "1.0.0",
  "version": "0.0.1",
  "inputSpec": [
    {
      "name": "vcf1",
      "class": "file",
      "optional": false,
      "patterns": [
        "*.vcf*"
      ],
      "help": ""
    },
    {
      "name": "vcf1_index",
      "class": "file",
      "optional": false,
      "patterns": [
        "*.*cf*.tbi"
      ],
      "help": ""
    },
    {
      "name": "vcf2",
      "class": "file",
      "optional": false,
      "patterns": [
        "*.vcf.gz",
        "*.bcf"
      ],
      "help": ""
    },
    {
      "name": "vcf2_index",
      "class": "file",
      "optional": false,
      "patterns": [
        "*.*cf*.tbi"
      ],
      "help": ""
    },
    {
      "name": "output_type",
      "class": "string",
      "optional": true,
      "default": "z",
      "help": ""
    },
    {
      "name": "output_vcf_name",
      "class": "string",
      "optional": true,
      "default": "bcftools_isec.vcf.gz",
      "help": ""
    }
  ],
  "outputSpec": [
    {
      "name": "intersecting_vcf",
      "class": "file",
      "patterns": [
        "*.vcf.gz"
      ],
      "help": ""
    },
    {
      "name": "intersecting_vcf_index",
      "class": "file",
      "patterns": [
        "*.vcf.gz.tbi"
      ],
      "help": ""
    }
  ],
  "runSpec": {
    "timeoutPolicy": {
      "*": {
        "hours": 1
      }
    },
    "interpreter": "bash",
    "file": "src/bcftools_isec.sh",
    "execDepends":[
      {"name": "bcftools"},
      {"name": "tabix"}
    ],
    "distribution": "Ubuntu",
    "release": "20.04",
    "version": "0"
  },
  "access": {
    "project": "CONTRIBUTE"
  },
  "regionalOptions": {
    "aws:eu-west-2": {
      "systemRequirements": {
        "*": {
          "instanceType": "mem1_ssd1_v2_x2"
        }
      }
    }
  }
}
