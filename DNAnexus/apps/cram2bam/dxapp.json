{
  "name": "cram2bam",
  "title": "CRAM2BAM",
  "summary": "Converts cram file to bam file and indexes the bam.",
  "dxapi": "1.0.0",
  "folder": "/CH_Exome/Workflow/BAMS/",
  "version": "0.0.1",
  "inputSpec": [
    {
      "name": "cram_in",
      "label": "Input_CRAM",
      "class": "file",
      "optional": false,
      "patterns": [
        "*.cram"
      ],
      "help": ""
    },
    {
      "name": "ref_fasta",
      "label": "Reference_Genome",
      "class": "file",
      "optional": false,
      "patterns": [
        "*.fa"
      ],
      "help": ""
    }
  ],
  "outputSpec": [
    {
      "name": "bam_out",
      "label": "Output_BAM",
      "class": "file",
      "patterns": [
        "*.bam"
      ],
      "help": ""
    },
    {
      "name": "bai_out",
      "label": "Output_BAM_Index",
      "class": "file",
      "patterns": [
        "*.bam.bai"
      ],
      "help": ""
    },
    {
      "name": "sample_name",
      "label": "get name of sample from bam or cram",
      "class": "string",
      "patterns": [
        "UKB*"
      ],
      "help": ""
    }
  ],
  "runSpec": {
    "timeoutPolicy": {
      "*": {
        "hours": 1
      }
    },
    "interpreter": "bash",
    "file": "src/cram2bam.sh",
    "execDepends":[
      {"name": "samtools"}
    ],
    "distribution": "Ubuntu",
    "release": "20.04",
    "version": "0"
  },
  "regionalOptions": {
    "aws:eu-west-2": {
      "systemRequirements": {
        "*": {
          "instanceType": "mem1_ssd1_v2_x2"
        }
      }
    }
  },
  "access": {
    "network": [
      "*"
    ]
  }
}
