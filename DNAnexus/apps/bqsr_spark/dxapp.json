{
  "name": "bqsr_spark",
  "title": "bqsr_spark",
  "summary": "bqsr_spark",
  "dxapi": "1.0.0",
  "version": "0.0.1",
  "httpsApp": {
    "shared_access":"NONE",
    "ports": [
      8081
    ]
  },
  "inputSpec": [
    {
      "name": "bam",
      "label": "bam",
      "class": "file",
      "optional": false,
      "patterns": [
        "*.bam",
        "*.cram"
      ],
      "help": ""
    },
    {
      "name": "bam_index",
      "label": "bam_index",
      "class": "file",
      "optional": false,
      "patterns": [
        "*.bam.bai",
        "*.cram.crai"
      ],
      "help": ""
    },
    {
      "name": "reference",
      "label": "reference",
      "class": "file",
      "optional": false,
      "patterns": [
        "*.fa",
        "*.fasta"
      ],
      "help": ""
    },
    {
      "name": "reference_index",
      "label": "reference_index",
      "class": "file",
      "optional": false,
      "patterns": [
        "*.fa.fai",
        "*.fasta.fai"
      ],
      "help": ""
    },
    {
      "name": "reference_dict",
      "label": "reference_dict",
      "class": "file",
      "optional": false,
      "patterns": [
        "*.dict"
      ],
      "help": ""
    },
    {
      "name": "known_sites",
      "label": "known_sites",
      "class": "array:file",
      "optional": false,
      "patterns": [
        "*.vcf.gz"
      ],
      "help": ""
    },
    {
      "name": "known_sites_index",
      "label": "known_sites_index",
      "class": "array:file",
      "optional": false,
      "patterns": [
        "*.vcf.gz.tbi"
      ],
      "help": ""
    },
    {
      "name": "dockerimage_gatk",
      "class": "file",
      "optional": true,
      "default": {
        "$dnanexus_link": {
            "project": "project-G3Yj1vjJ6XG579jbKyjXPGGY",
            "id": "file-G464PjQJ6XGK5YYg78FP1z1k"
        }
      },
      "help": ""
    }
  ],
  "outputSpec": [
    {
      "name": "bam_out",
      "label": "bam_out",
      "class": "file",
      "patterns": [
        "*.bam"
      ],
      "help": ""
    },
    {
      "name": "bam_out_index",
      "label": "bam_out_index",
      "class": "file",
      "patterns": [
        "*.bam.bai"
      ],
      "help": ""
    },
    {
      "name": "cluster_runtime_logs_tarball",
      "label": "Cluster runtime logs tarball",
      "class": "file",
      "patterns": [ "*.tar.gz" ],
      "optional": true,
      "help": "The tarball of the cluster runtime logs"
    }
  ],
  "runSpec": {
    "timeoutPolicy": {
      "*": {
        "hours": 1
      }
    },
    "interpreter": "bash",
    "file": "src/bqsr_spark.sh",
    "execDepends":[
      {"name": "openjdk-8-jdk"},
      {"name": "python3.8"}
    ],
    "distribution": "Ubuntu",
    "release": "20.04",
    "version": "0"
  },
  "access": {
    "project": "CONTRIBUTE",
    "allProjects": "VIEW",
    "network": [ "*" ]
  },
  "executionPolicy": {
    "restartOn": {
      "UnresponsiveWorker": 2
    },
    "maxSpotTries": 2
  },
  "regionalOptions": {
    "aws:eu-west-2": {
      "systemRequirements": {
        "*": {
          "instanceType": "mem2_ssd1_v2_x8"
        }
      }
    }
  }
}
