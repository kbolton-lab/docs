{
  "name": "haplotype_caller",
  "title": "HaplotypeCaller",
  "summary": "Run HaplotypeCaller",
  "dxapi": "1.0.0",
  "version": "0.0.1",
  "inputSpec": [
    {
      "name": "reference",
      "label": "reference assembly fasta",
      "class": "file",
      "optional": false,
      "patterns": [
        "*.fa",
        "*.fasta"
      ],
      "help": ""
    },
    {
      "name": "reference_index",
      "label": "reference assembly index",
      "class": "file",
      "optional": false,
      "patterns": [
        "*.fai"
      ],
      "help": ""
    },
    {
      "name": "reference_dict",
      "label": "reference assembly dict",
      "class": "file",
      "optional": false,
      "patterns": [
        "*.dict"
      ],
      "help": ""
    },
    {
      "name": "tumor_bam",
      "class": "file",
      "optional": false,
      "patterns": [
        "*.bam"
      ],
      "help": ""
    },
    {
      "name": "tumor_bai",
      "class": "file",
      "optional": false,
      "patterns": [
        "*.bai",
        "*.bam.bai"
      ],
      "help": ""
    },
    {
      "name": "interval_list",
      "class": "file",
      "optional": false,
      "default": {
        "$dnanexus_link": {
            "project": "project-G4qpk1jJQ285yvbXPFZKXkk8",
            "id": "file-G6XfFpQJQ28K3v2P9pjqpG9y"
        }
      },
      "patterns": [
        "*.interval_list"
      ],
      "help": ""
    },
    {
      "name": "dockerimage_gatk",
      "class": "file",
      "optional": true,
      "default": {
        "$dnanexus_link": {
            "project": "project-G3Yj1vjJ6XG579jbKyjXPGGY",
            "id": "file-G464PjQJ6XGK5YYg78FP1z1k"
        }
      },
      "help": ""
    },
    {
      "name": "output_name",
      "label": "output_name",
      "class": "string",
      "optional": true,
      "default": "haplotype_caller.vcf.gz",
      "help": ""
    }
  ],
  "outputSpec": [
    {
      "name": "vcf",
      "class": "file",
      "patterns": [
        "*.vcf",
        "*.vcf.gz"
      ],
      "help": ""
    },
    {
      "name": "vcf_index",
      "class": "file",
      "patterns": [
        "*.vcf.gz.tbi"
      ],
      "help": ""
    }
  ],
  "runSpec": {
    "timeoutPolicy": {
      "*": {
        "hours": 2
      }
    },
    "interpreter": "bash",
    "file": "src/haplotype_caller.sh",
    "distribution": "Ubuntu",
    "execDepends":[
      {"name": "bcftools"},
      {"name": "samtools"},
      {"name": "tabix"}
    ],
    "release": "20.04",
    "version": "0"
  },
  "access": {
    "project": "CONTRIBUTE",
    "allProjects": "VIEW"
  },
  "regionalOptions": {
    "aws:eu-west-2": {
      "systemRequirements": {
        "*": {
          "instanceType": "mem3_ssd1_v2_x4"
        }
      }
    }
  }
}
